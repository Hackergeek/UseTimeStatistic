<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/index"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/index"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/app_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/text_use_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_use_count"
        android:textSize="13sp" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/text_use_count"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/use_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp" />

    <TextView
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/app_icon"
        app:layout_constraintTop_toBottomOf="@id/text_use_count"
        android:id="@+id/text_use_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_use_time"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/use_time"
        app:layout_constraintStart_toEndOf="@id/text_use_time"
        app:layout_constraintTop_toBottomOf="@id/use_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mc_unread"
        android:textSize="13sp" />


    <TextView
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/app_icon"
        app:layout_constraintTop_toBottomOf="@id/text_use_time"
        android:id="@+id/text_calculate_use_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_calculate_use_time"
        android:textSize="13sp" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/text_calculate_use_time"
        app:layout_constraintTop_toBottomOf="@id/use_time"
        android:id="@+id/calculate_use_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mc_unread"
        android:textSize="13sp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/white_pressed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

